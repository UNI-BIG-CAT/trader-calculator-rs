import { Button, VerticalBox, HorizontalBox, ListView, LineEdit, ScrollView } from "std-widgets.slint";
import { StockItem, StockActionItem } from "./data.slint";

export component DetailWindow inherits Rectangle {
    // 输入属性
    in property <StockItem> stock_info;
    in property <[StockActionItem]> action_list: [];
    
    // 对话框状态
    in-out property <bool> show_single_action_dialog: false;
    
    // 回调函数
    callback go_back();
    callback add_position();
    callback reduce_position();
    callback back_position();
    callback close_position();

    // 检查是否只有一条操作记录的回调
    callback check_single_action_callback();

    background: #f5f5f5;
    VerticalBox {
        spacing: 10px;
        padding: 20px;
        
        // 头部 - 返回按钮和标题
        HorizontalBox {
            alignment: start;
            spacing: 20px;
            
            // 返回按钮
            Rectangle {
                width: 80px;
                height: 35px;
                background: #f5f5f5;
                border-radius: 5px;
                Text {
                    text: "< 返回";
                    color: #FE9900;
                    font-size: 14px;
                    vertical-alignment: center;
                    horizontal-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.go_back();
                    }
                }
            }
            
            // 标题
            Text {
                text: stock_info.stock_name;
                font-size: 18px;
                font-weight: 700;
                color: #333;
                vertical-alignment: center;
            }
        }
        
        // 股票基本信息卡片
        Rectangle {
            background: white;
            border-radius: 8px;
            height: 80px;
            HorizontalBox {
                spacing: 30px;
                VerticalBox {
                    spacing: 5px;
                    Text {
                        text: "股票名称";
                        font-size: 12px;
                        color: #666;
                    }

                    Text {
                        text: stock_info.stock_name;
                        font-size: 14px;
                        font-weight: 600;
                        color: #333;
                    }
                }

                VerticalBox {
                    spacing: 5px;
                    Text {
                        text: "股票类型";
                        font-size: 12px;
                        color: #666;
                    }

                    Text {
                        text: stock_info.stock_type == 1 ? "沪市" : stock_info.stock_type == 2 ? "深市" : stock_info.stock_type == 3 ? "创业板" : "科创板";
                        font-size: 14px;
                        font-weight: 600;
                        color: #333;
                    }
                }

                VerticalBox {
                    spacing: 5px;
                    Text {
                        text: "佣金费率";
                        font-size: 12px;
                        color: #666;
                    }

                    Text {
                        text: (stock_info.commission_fee_rate * 10000) + "‱";
                        font-size: 14px;
                        font-weight: 600;
                        color: #333;
                    }
                }

                VerticalBox {
                    spacing: 5px;
                    Text {
                        text: "创建时间";
                        font-size: 12px;
                        color: #666;
                    }

                    Text {
                        text: stock_info.created_at;
                        font-size: 14px;
                        font-weight: 600;
                        color: #333;
                    }
                }
            }
        }
        
        // 操作记录标题和统计
        HorizontalBox {
            spacing: 10px;
            alignment: start;
            Text {
                text: "操作记录 (" + action_list.length + " 条)";
                font-size: 16px;
                font-weight: 600;
                color: #333;
            }

            // 加仓按钮
            Rectangle {
                width: 80px;
                height: 35px;
                background: #f5f5f5;
                border-radius: 5px;
                Text {
                    text: "加仓";
                    color: #FE9900;
                    font-size: 14px;
                    vertical-alignment: center;
                    horizontal-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.add_position();
                    }
                }
            }

            // 减仓按钮
            Rectangle {
                width: 80px;
                height: 35px;
                background: #f5f5f5;
                border-radius: 5px;
                Text {
                    text: "减仓";
                    color: #FE9900;
                    font-size: 14px;
                    vertical-alignment: center;
                    horizontal-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.reduce_position();
                    }
                }
            }

            // 平仓按钮
            Rectangle {
                width: 80px;
                height: 35px;
                background: #f5f5f5;
                border-radius: 5px;
                Text {
                    text: "平仓";
                    color: #FE9900;
                    font-size: 14px;
                    vertical-alignment: center;
                    horizontal-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.close_position();
                    }
                }
            }

            // 回退
            Rectangle {
                width: 80px;
                height: 35px;
                background: #f5f5f5;
                border-radius: 5px;
                Text {
                    text: "回退";
                    color: #FE9900;
                    font-size: 14px;
                    vertical-alignment: center;
                    horizontal-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.back_position();
                    }
                }
            }
        }
        
        // 操作记录列表
        Rectangle {
            background: white;
            border-radius: 8px;
            if action_list.length == 0: Rectangle {
                height: 150px;
                Text {
                    text: "暂无操作记录";
                    color: #999;
                    font-size: 14px;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }
            if action_list.length > 0: ScrollView {
                height: 400px;
                VerticalBox {
                    padding: 15px;
                    spacing: 10px;
                    
                    // 表头
                    HorizontalBox {
                        height: 35px;
                        spacing: 5px;
                        Rectangle {
                            width: 80px;
                            Text {
                                text: "操作类型";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666;
                                horizontal-alignment: center;
                            }
                        }

                        Rectangle {
                            width: 80px;
                            Text {
                                text: "交易价格";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666;
                                horizontal-alignment: center;
                            }
                        }

                        Rectangle {
                            width: 80px;
                            Text {
                                text: "交易数量";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666;
                                horizontal-alignment: center;
                            }
                        }

                        Rectangle {
                            width: 80px;
                            Text {
                                text: "佣金费用";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666;
                                horizontal-alignment: center;
                            }
                        }

                        Rectangle {
                            width: 80px;
                            Text {
                                text: "盈亏金额";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666;
                                horizontal-alignment: center;
                            }
                        }

                        Rectangle {
                            width: 80px;
                            Text {
                                text: "盈亏比例";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666;
                                horizontal-alignment: center;
                            }
                        }

                        Rectangle {
                            width: 120px;
                            Text {
                                text: "操作时间";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666;
                                horizontal-alignment: center;
                            }
                        }
                    }
                    
                    // 分割线
                    Rectangle {
                        height: 1px;
                        background: #e0e0e0;
                    }
                    
                    // 操作记录行
                    for action_item[index] in action_list: Rectangle {
                        height: 45px;
                        background: Math.mod(index, 2) == 0 ? #f8f9fa : white;
                        HorizontalBox {
                            spacing: 5px;
                            padding: 8px;
                            Rectangle {
                                width: 80px;
                                Text {
                                    text: action_item.action == 1 ? "建仓" : action_item.action == 2 ? "平仓" : action_item.action == 3 ? "加仓" : "减仓";
                                    font-size: 12px;
                                    color: action_item.action == 1 ? #28a745 : action_item.action == 2 ? #dc3545 : action_item.action == 3 ? #17a2b8 : #fd7e14;
                                    font-weight: 600;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }

                            Rectangle {
                                width: 80px;
                                Text {
                                    text: action_item.transaction_price;
                                    font-size: 12px;
                                    color: #333;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }

                            Rectangle {
                                width: 80px;
                                Text {
                                    text: action_item.transaction_amount;
                                    font-size: 12px;
                                    color: #333;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }

                            Rectangle {
                                width: 80px;
                                Text {
                                    text: action_item.transaction_commission_fee;
                                    font-size: 12px;
                                    color: #666;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }

                            Rectangle {
                                width: 80px;
                                Text {
                                    text: action_item.profit >= 0 ? "+" + action_item.profit : action_item.profit;
                                    font-size: 12px;
                                    color: action_item.profit >= 0 ? #28a745 : #dc3545;
                                    font-weight: 600;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }

                            Rectangle {
                                width: 80px;
                                Text {
                                    text: (action_item.profit_rate >= 0 ? "+" : "") + (action_item.profit_rate * 100) + "%";
                                    font-size: 12px;
                                    color: action_item.profit_rate >= 0 ? #28a745 : #dc3545;
                                    font-weight: 600;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }

                            Rectangle {
                                width: 120px;
                                Text {
                                    text: action_item.created_at;
                                    font-size: 12px;
                                    color: #666;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
    
    // 单条操作记录提示对话框
    if show_single_action_dialog: Rectangle {
        // 遮罩层 - 覆盖整个窗口
        background: rgba(0, 0, 0, 0.5);
        
        // 对话框居中容器
        VerticalBox {
            alignment: center;
            HorizontalBox {
                alignment: center;
                
                // 实际的对话框内容
                Rectangle {
                    width: 300px;
                    height: 180px;
                    background: white;
                    border-radius: 8px;
                    drop-shadow-color: rgba(0, 0, 0, 0.3);
                    drop-shadow-offset-x: 0px;
                    drop-shadow-offset-y: 4px;
                    drop-shadow-blur: 10px;
                    VerticalBox {
                        padding: 30px;
                        spacing: 20px;
                        alignment: center;
                        
                        // 提示消息
                        Text {
                            text: "请点击清仓按钮";
                            font-size: 16px;
                            font-weight: 600;
                            color: #333;
                            horizontal-alignment: center;
                        }
                        
                        // 确认按钮
                        Rectangle {
                            width: 100px;
                            height: 40px;
                            background: #FE9900;
                            border-radius: 6px;
                            Text {
                                text: "知道了";
                                color: white;
                                font-size: 14px;
                                font-weight: 600;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            TouchArea {
                                clicked => {
                                    root.show_single_action_dialog = false;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
